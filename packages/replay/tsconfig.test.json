{
  "extends": "./tsconfig.json",

  "include": ["test/**/*.ts", "jest.config.ts", "jest.setup.ts"],

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
