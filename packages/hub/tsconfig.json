{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "types": ["node", "jest"],
    "paths": {
      "@sentry/*": [
        "../*/src"
      ]
    }
  },
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../utils"
    }
  ],
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist"]
}
