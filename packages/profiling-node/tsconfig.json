{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "scripts/**/*", "benchmark/**/*"],

  "compilerOptions": {
    // package-specific options
    "module": "commonjs",
    "target": "es2016",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "checkJs": false,
    "allowJs": true,
    "declaration": true
  }
}
