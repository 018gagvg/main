{
  "name": "@sentry/node",
  "version": "0.3.0",
  "description": "Offical Sentry SDK for Node.js",
  "author": "Sentry",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "main": "dist/node/src/index.js",
  "types": "dist/node/src/index.d.ts",
  "dependencies": {
    "@sentry/core": "^0.3.0",
    "raven": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "*",
    "jest": "*",
    "prettier": "*",
    "rimraf": "*",
    "ts-jest": "*",
    "tslint": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist coverage",
    "lint": "tslint --config ../.tslintrc.json src/**/*",
    "format": "prettier --config ../.prettierrc.json src/**/* --write",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "collectCoverage": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": ["js", "ts"],
    "testMatch": ["**/*.test.ts"],
    "testPathIgnorePatterns": ["/Mock/"]
  }
}
