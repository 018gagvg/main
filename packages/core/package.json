{
  "name": "@sentry/core",
  "version": "0.3.0",
  "description": "Sentry core implementation for all JavaScript related SDKs",
  "author": "Sentry",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "karma": "*",
    "prettier": "*",
    "tslint": "*",
    "webpack-cli": "*",
    "mocha": "*",
    "ts-node": "*"
  },
  "scripts": {
    "build": "webpack --config ../webpack.config.js",
    "clean": "rm -rf ./build ./dist ./coverage",
    "lint": "tslint --config ../.tslintrc.json src/**/*",
    "format": "prettier --config ../.prettierrc.json src/**/* --write",
    "test":
      "karma start ../karma.config.js && mocha --require ts-node/register -r tsconfig-paths/register 'test/**/*.{ts,tsx}'",
    "test:watch": "karma start ../karma.config.js --auto-watch --no-single-run"
  }
}
