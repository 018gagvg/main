{
  "name": "@sentry/core",
  "version": "0.1.0",
  "description": "Sentry core implementation for all JavaScript related SDKs",
  "main": "dist/core.js",
  "module": "dist/esm5/core.js",
  "es2015": "dist/esm2015/core.js",
  "typings": "dist/core.d.ts",
  "typescript": {
    "definition": "dist/core.d.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.32",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3"
  },
  "engines": {
    "node": ">=6.9.5 <9.0.0",
    "npm": ">=3.10.7 <6.0.0",
    "yarn": ">=1.0.2 <2.0.0"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "dist": "npm run clean && tsc -p tsconfig.json",
    "test": "npm run dist && jest",
    "test:watch": "jest --watch --notify"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/__mocks__"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.(jsx?|tsx?)$",
      "\\.no-jest\\.(jsx?|tsx?)$"
    ]
  },
  "author": "Sentry",
  "license": "MIT"
}
