{
  "name": "@sentry/core",
  "version": "0.3.0",
  "description": "Sentry core implementation for all JavaScript related SDKs",
  "author": "Sentry",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "karma": "*",
    "prettier": "*",
    "rimraf": "*",
    "tslint": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist coverage",
    "lint": "tslint --config ../.tslintrc.json src/**/*",
    "format": "prettier --config ../.prettierrc.json src/**/* --write",
    "test": "karma start ../karma.config.js",
    "test:watch": "karma start ../karma.config.js --auto-watch --no-single-run"
  }
}
