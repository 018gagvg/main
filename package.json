{
  "name": "@sentry/core",
  "version": "0.1.0",
  "description": "Sentry core implementation for all JavaScript related SDKs",
  "main": "dist/index.js",
  "typings": "definitions/index",
  "typescript": {
    "definition": "definitions/index"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.32",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "raven": "^2.2.1",
    "raven-js": "^3.18.1",
    "ts-jest": "^21.1.2",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "dist": "npm run clean && tsc -p tsconfig.json",
    "build-browser": "webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "test-node": "ts-node _node.ts",
    "test-browser": "npm run build-browser && open ./tests/index.html",
    "watch": "webpack --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "author": "Sentry",
  "license": "MIT"
}
